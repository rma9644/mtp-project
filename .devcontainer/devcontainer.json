{
  "name": "Jupyter Python 3.12 Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "jupyter.defaultKernel": "python3"
      }
    }
  },
  "postCreateCommand": "python -m ipykernel install --user --name py312-devcontainer --display-name \"Python 3.12 (DevContainer)\"",
  "forwardPorts": [8888],
  "remoteUser": "vscode"
}

